@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer;

@Html.ActionLink(" All Engineers", "Index",null, null, new { @class="btn btn-info fa fa-address-book-o" })
@Html.ActionLink(" Edit", "Edit", new { id = Model.EngineerId }, new { @class="btn btn-info fa fa-edit" })
@Html.ActionLink(" Delete", "Delete", new { id = Model.EngineerId }, new { @class="btn btn-info fa fa-times" })

<p>@Html.DisplayFor(model => model.Name)'s Details</p>
<hr />
<p>@Html.Label("Name"): @Html.DisplayFor(model => model.Name)</p>
<p>@Html.Label("Hire Date"): @Html.DisplayFor(model => model.HireDate)</p>
<p>@Html.Label("Contact Info"): @Html.DisplayFor(model => model.Contact)</p>

<div class="box">
  <div class="inner-box">
    @if(@Model.Licenses.Count == 0)
    {
      <p>This Engineer does not have any Licenses.</p>
    }
    else
    {
      <p>Licenses</p>
      <ul>
      @foreach(var join in Model.Licenses)
      {
        <li>@join.License.Name
        @Html.ActionLink("Delete", "DeleteLicense", "Engineers", new { joinId = @join.EngineerLicenseId, EngineerId = Model.EngineerId }, new { @class="btn btn-info fa fa-times" })
        </li>
      }
      </ul>
    }
  </div>
</div>
<div class="box">
  <div class="inner-box">
    @if(@ViewBag.Machines.Count == 0)
    {
      <p>This Engineer does not have any Machines.</p>
    }
    else
    {
      <p>Assigned Machines</p>
      <ul>
      @foreach(var machine1 in ViewBag.Machines)
      {
        foreach(var machine2 in machine1)
        {
          <li>@machine2.Name</li>
        }
      }
      </ul>
    }
  </div>
</div>