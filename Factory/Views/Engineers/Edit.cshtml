@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer
@Html.ActionLink(" All Engineers", "Index", null, null, new { @class="btn btn-info fa fa-address-book-o" })
<p>Edit</p>

<p>Edit @Html.DisplayFor(model => model.Name)</p>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)
  <table>
    <tr>
      <td>@Html.LabelFor(model => model.Name)</td>
      <td>@Html.EditorFor(model => model.Name)</td>
    </tr>
    <tr>
      <td>@Html.Label("Hire Date")</td>
      <td>@Html.EditorFor(model => model.HireDate)</td>
    </tr>
    <tr>
      <td>@Html.Label("Contact Info")</td>
      <td>@Html.EditorFor(model => model.Contact)</td>
    </tr>
    <tr>
      <td>@Html.Label("Select License")</td>
      <td>@Html.DropDownList("LicenseId")</td>
    </tr>
  </table>
  <button type="submit" class="btn btn-info fa"><i class="fa-edit"> Save</i></button>
}
