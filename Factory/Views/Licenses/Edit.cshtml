@{
  Layout = "_Layout";
}

@model Factory.Models.License

@Html.ActionLink(" Home", "Index", "Home", null, new { @class="btn btn-info fa fa-home" })
@Html.ActionLink(" All Licenses", "Index", null, null, new { @class="btn btn-info fa fa-address-card-o" })
<hr />
<p>Edit @Html.DisplayFor(model => model.Name)</p>
<hr />
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.LicenseId)
  <table>
    <tr>
      <td>@Html.LabelFor(model => model.Name)</td>
      <td>@Html.EditorFor(model => model.Name)</td>
    </tr>
    <tr>
      <td>@Html.Label("Select Engineer")</td>
      <td>@Html.DropDownList("EngineerId")</td>
    </tr>
    <tr>
      <td>@Html.Label("Select Machine Type")</td>
      <td>@Html.DropDownList("MachineTypeId")</td>
    </tr>
  </table>
  <button type="submit" class="btn btn-info fa"><i class="fa-edit"> Save</i></button>
}
<hr />
