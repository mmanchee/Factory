@{
  Layout = "_Layout";
}

@model Factory.Models.Record;

@Html.ActionLink(" Home", "Index", "Home", null, new { @class="btn btn-info fa fa-home" })
@Html.ActionLink(" All Records", "Index",null, null, new { @class="btn btn-info fa fa-folder-open" })
@Html.ActionLink(" Edit", "Edit", new { id = Model.RecordId }, new { @class="btn btn-info fa fa-edit" })
@Html.ActionLink(" Delete", "Delete", new { id = Model.RecordId }, new { @class="btn btn-info fa fa-times" })
<hr />
<p>@Html.DisplayFor(model => model.RecordId) Details</p>
<hr />
<p>@Html.Label("Issue"): @Html.DisplayFor(model => model.Issue)</p>
<p>@Html.Label("Issue Type"): @Html.DisplayFor(model => model.RecordType)</p>
<p>@Html.Label("Details"): @Html.DisplayFor(model => model.Details)</p>
<p>@Html.Label("Issue Date"): @Html.DisplayFor(model => model.IssueDate)</p>
<p>@Html.Label("Date Finished"): @Html.DisplayFor(model => model.FinishDate)</p>
@if (Model.EngineerId > 0)
{
  <p>@Html.Label("Engineer"): @ViewBag.Engineers.Name</p>
}
@if (Model.EngineerId > 0)
{
  <p>@Html.Label("Contact Info"): @ViewBag.Machines.Name</p>
}
<hr />